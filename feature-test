username = set()
print("Please input username")
username = input(': ')
user_role2 = {}
user = set()
user.add(username)
moderator = set()

roles_available = {'admin', 'user', 'moderator', '1', '2', '3'}


def roles(username):
    print("Print the username:")
    role_name = input(':')
    if role_name not in username:
        if role_name in username:
            print("1. User")
            print("2. Admin")
            print("3. Moderator")
            print("Which role to assign?")
            role_picked = input(': ')
            role_picked_low = len(role_picked)
            if role_picked_low not in roles_available:
                if role_picked == 'admin' or role_picked == '2':
                    user_role2["name"] = role_name
                    user_role2["role"] = "admin"
                    print("You are now registered as a admin.")
                if "admin" in user_role2:
                    print("You are already registered as a admin.")
                if role_picked == 'user' or role_picked == '1':
                    print("You are already registered as a user.")
                if role_picked == 'moderator' or role_picked == '3':
                    user_role2["name"] = role_name
                    user_role2["role"] = "moderator"
                    print("You are registered as a moderator")
                if "moderator" in user_role2:
                    print("You are already registered as a moderator.")
            print("Please write the name of the role or the number associated with the role.")
        print("Please choose a role")
    print("Please enter a name which exists already.")
roles(username)
