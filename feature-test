username = set()
print("Please input username")
username = input(': ')
user_role2 = {}
user = set()
user.add(username)

user_val = 1
admin_val = 2
moderator_val = 3
roles_available = {'admin', 'user', 'moderator', '1', '2', '3'}
def roles(username):
    print("Print the username:")
    role_name = input(':')
    if role_name in username:
        print("1. User")
        print("2. Admin")
        print("3. Moderator")
        print("Which role to asign?")
        
        role_picked = input(': ')
        role_picked_low = len(role_picked)
    if role_picked_low not in roles_available:
        if role_picked == 'admin'or role_picked == '2' :
            user_role2['name'] = role_name
            user_role2['role'] = "admin" and admin_val
            print("You are now registered as a admin.")
        if role_picked == 'user' or role_picked == '1':
            print("You are already registered as a user.")
        if role_picked == 'moderator' or role_picked == '3':
            user_role2["name"] = role_name
            user_role2["role"] = "moderator" and moderator_val
            print("You are registered as a moderator")
